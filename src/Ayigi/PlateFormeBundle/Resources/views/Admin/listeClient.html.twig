{% extends "::layout_admin.html.twig" %}

{% block body %}
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <h1 class="page-header">Dashboard</h1>
          

          {% block section2 %}
          <h2 class="sub-header">All plateforme Clients</h2>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>id</th>
                  <th>Nom</th>
                  <th>Prenom</th>
                  <th>numero</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Update</th>
                  <th>Delete</th>
                </tr>
              </thead>
              <tbody>
              {% for client in clients %}
                <tr>
                  <td>{{ client.id }} </td>
                  <td>{{ client.nom }} </td>
                  <td>{{ client.prenom }} </td>
                  <td>{{ client.numeroclient }} </td>
                  <td>{{ client.email }} </td>
                  <td>{{ client.telephone }} </td>
                  <td>
                    <a href="{{path('ayigi_plate_forme_admin_update_client', {'id' : client.id })}} ">Update</a>
                  </td>
                  <td>
                    <a href="{{path('ayigi_plate_forme_admin_delete_client', {'id' : client.id })}} ">Delete</a>
                  </td>
                </tr>
              {% endfor %}
               
              </tbody>
            </table>
          </div>
          {% endblock %}
        </div>
      {% endblock %}